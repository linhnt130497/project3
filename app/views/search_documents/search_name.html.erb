<div class="row">
  <div class="search-category">
    <%= render "form_search_category" %>
  </div>

  <h3 class="text-center"><%= t ".document" %></h3>
  <div class="col-md-offset-2 ajax-documents">
    <% if @documents.any? %>
      <ol class="documents">
        <%= render @documents %>
      </ol>
      <%= will_paginate @documents %>
    <% end %>
  </div>
</div>
